<div id="page-wrapper">
    <div class="container-fluid margin-layout">

    <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Búsqueda 
                    <% @search.keywords.split(" ").each do |keyword| %>
                    	<small><span class="badge"><%= keyword %></span></small>
                    <% end %>                    
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <%= link_to "Inicio", dashboard_index_path %>
                    </li>
                    <li>
                        <i class="glyphicon glyphicon-th-list"></i>  <%= link_to "Listar Búsquedas", searches_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-search"></i> Búsqueda
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-primary">
				<div class="panel-heading">Detalle de Búsqueda</div>
				<div class="panel-body">
					<p>
					  <strong>Search type:</strong>
                      <%= @search.search_type ? @search.search_type : "Indefinido" %>
					</p>

					<p>
					  <strong>Twitter User:</strong>
					  <%= @search.keywords %>
					</p>

					<p>
					  <strong>Depth level:</strong>
					  <%= @search.depth_level ? @search.depth_level : "Indefinido" %>
					</p>

					<p>
					  <strong>Created At:</strong>
					  <%= @search.created_at %>
					</p>

					<%= link_to 'Editar', edit_search_path(@search), class: "btn btn-warning btn-sm" %>
				</div>
				<!-- /.panel-body -->

				<table class="table">
					<thead>
					  <tr>
					    <th>Screen Name</th>
					    <th>Name</th>
					    <th>Followers</th>
					    <th>Following</th>
					    <th>Created At</th>
					    <th colspan="3"></th>
					  </tr>
					</thead>

					<tbody>
					  <% @search.twitter_users.each do |tuser| %>
					    <tr>
					      <td><%= tuser.twitters_user[:screen_name] %></td>
					      <td><%= tuser.twitters_user[:name] %></td>
					      <td><%= tuser.twitters_user[:followers_count] %></td>
					      <td><%= tuser.twitters_user[:friends_count] %></td>
					      <td><%= tuser.twitters_user[:created_at] %></td>
					      <td><%= link_to 'Ver', search_twitter_user_path(@search, tuser), class: "btn btn-info btn-sm" %></td>
					      <td><%= link_to 'Editar', edit_search_twitter_user_path(@search, tuser), class: "btn btn-warning btn-sm" %></td>
					      <td><%= link_to 'Eliminar', search_twitter_user_path(@search, tuser), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
					    </tr>
					  <% end %>
					</tbody>
				</table>

			</div>
		</div>
		<!-- /.row -->

	</div>
</div>