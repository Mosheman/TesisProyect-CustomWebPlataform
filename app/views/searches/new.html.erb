<div id="page-wrapper">
    <div class="container-fluid margin-layout">

		<!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Búsqueda <small>Quedan <span class="label label-<%= @n_calls <= 1 ? 'danger' : 'success' %>"><%= @n_calls %> llamadas</span></small>
                    
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <%= link_to "Inicio", dashboard_index_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-search"></i> Búsqueda
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
        	<div class="col-lg-7">
                <div class="panel panel-primary">
                	<div class="panel-heading">Parámetros de búsqueda</div>
                    <div class="panel-body">
				        
						<%= render 'form' %>
				        
					</div>
				</div>
			</div>

			<div class="col-lg-5">
				<div class="panel panel-info">
					<div class="panel-heading">Log</div>
					<div class="panel-body" style="max-height: 330px;overflow-y: scroll;">
			        	<ul class="list-group">
					        <div id="log-div">
					        	<div id="search-spinner" class="search-spinner"></div>
					        </div>
			        	</ul>
			    	</div>    	
				</div>
	        </div>

        </div>
        <!-- /.row -->

	</div>
</div>