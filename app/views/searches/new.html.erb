<div id="page-wrapper">
    <div class="container-fluid margin-layout">

		<!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Búsqueda <small>Quedan <span class="label label-<%= @n_calls <= 1 ? 'danger' : 'success' %>"><%= @n_calls %> llamadas</span></small>
                    
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <%= link_to "Inicio", dashboard_index_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-search"></i> Búsqueda
                    </li>
                    <li>
                        <div class="btn-group">
                          <button id="search-type" type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span id="searchtype-select">
                                <%= @searchtype_selected.label %>
                            </span>
                            <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu">
                            <% @search_types.each do |st| %>
                                <li>
                                    <%= link_to st.label.to_s, set_searchtype_searches_path(:search_type => st.get_attributes), :remote => true, :class => "searchtype-option" %>
                                </li>
                            <% end %>
                          </ul>
                        </div>
                        <%#= select_tag( "my_tag_id", get_ids(@entity), class: "form-control",
                              data: {
                                remote: true,
                                url: url_for( action: :set_searchtype, id: my_id)
                              }
                            )
                        %>
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
        	<div class="col-lg-7">
                <div class="panel panel-primary">
                	<div class="panel-heading">Parámetros de búsqueda</div>
                    <div class="panel-body">
				        
				       <%= render partial: "form" %>

					</div>
				</div>
			</div>

			<div class="col-lg-5">
				<div class="panel panel-info">
					<div class="panel-heading">Log</div>
					<div class="panel-body" style="max-height: 330px;overflow-y: scroll;">
			        	<ul class="list-group">
					        <div id="log-div">
					        	<div id="search-spinner" class="search-spinner"></div>
					        </div>
			        	</ul>
			    	</div>    	
				</div>
	        </div>

        </div>
        <!-- /.row -->

	</div>
</div>
