<div id="page-wrapper">
    <div class="container-fluid margin-layout">

		<!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Búsqueda <small>Quedan <span class="label label-<%= @n_calls <= 1 ? 'danger' : 'success' %>"><%= @n_calls %> llamadas</span></small>
                    
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <%= link_to "Inicio", dashboard_index_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-search"></i> Búsqueda
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
        	<div class="col-lg-7">
                <div class="panel panel-primary">
                	<div class="panel-heading">Parámetros de búsqueda</div>
                    <div class="panel-body">

				        <%= form_tag({controller: "searches", action: "create"}, 
				        				method: "post", 
				        				class: "form-horizontal", 
				        				remote: true,
				        				id: "search-form") do %>

				        	<div class="form-group">
							    <%= label_tag :keywords, "Palabras clave", class: "control-label col-xs-2" %>
							    <div class="col-xs-7">
									<%= text_field_tag :keywords, nil, class: "form-control", autocomplete: :on %>
								</div>

			    				<div class="col-xs-2">
									<%= submit_tag "Buscar", class: "btn btn-warning search-submit", id: "search-btn" %>
								</div>
								
							</div>

							<div class="panel panel-info">
			                	<div class="panel-heading">Georeferencias</div>
			                    <div class="panel-body">

									<div class="form-group">
									    <%= label_tag :latitude, "Latitud", class: "control-label col-xs-2", autocomplete: :on %>
									    <div class="col-xs-5">
											<%= text_field_tag :latitude, nil, class: "form-control" %>
										</div>
										<div class="col-xs-3">
											<%= label_tag :measurement_lat, "Grados", class: "control-label" %>
										</div>
									</div>

									<div class="form-group">
									    <%= label_tag :longitude, "Longitud", class: "control-label col-xs-2" %>
									    <div class="col-xs-5">
											<%= text_field_tag :longitude, nil, class: "form-control", autocomplete: :on %>
										</div>
										<div class="col-xs-3">
											<%= label_tag :measurement_long, "Grados", class: "control-label" %>
										</div>
									</div>

									<div class="form-group">
									    <%= label_tag :radius, "Radio", class: "control-label col-xs-2" %>
									    <div class="col-xs-5">
											<%= number_field_tag :radius, nil, min: 1, class: "form-control", placeholder: "Cantidad de Kms", value: 1 %>
										</div>
										<div class="col-xs-3">
											<%= label_tag :measurement, "Kilómetro(s)", class: "control-label" %>
										</div>
									</div>

				                </div>
				            </div>

							<div class="panel panel-info">
								<div class="panel-heading">Criterios de parada</div>
								<div class="panel-body">
									<div class="form-group">
									    <%= label_tag :time_stop, "Tiempo", class: "control-label col-xs-2" %>
									    <div class="col-xs-1">
											<%= check_box_tag :check_period, 'yes', false, class: "checkbox-reduce form-control" %>
										</div>
										<div class="col-xs-3">
											<%= text_field_tag :time_stop, nil, options: {:step => 1}, class: "hasDatepicker form-control", placeholder: "HH:mm:ss", disabled: "disabled" %>
										</div>
									</div>
									<div class="form-group">
									    <%= label_tag :data_stop, "Datos", class: "control-label col-xs-2" %>
									    <div class="col-xs-1">
											<%= check_box_tag :check_data, 'yes', false, class: "checkbox-reduce form-control" %>
										</div>
										<div class="col-xs-3">
											<%= number_field_tag :data_stop, nil, min: 0, class: "form-control", placeholder: "Cantidad de datos", disabled: "disabled" %>
										</div>
									</div>
									
								</div>
							</div>

							
						<% end %>
					</div>
				</div>
			</div>

			<div class="col-lg-5">
				<div class="panel panel-info">
					<div class="panel-heading">Log</div>
					<div class="panel-body" style="max-height: 330px;overflow-y: scroll;">
			        	<ul class="list-group">
					        <div id="log-div">
					        	<div id="search-spinner" class="search-spinner"></div>
					        </div>
			        	</ul>
			    	</div>    	
				</div>
	        </div>

        </div>
        <!-- /.row -->

	</div>
</div>