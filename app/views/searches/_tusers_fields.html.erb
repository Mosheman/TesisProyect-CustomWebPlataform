<div class="form-group">
  <%= label_tag :keywords, "Nombre usuario", class: "control-label col-xs-2" %>
  <div class="col-xs-7">
    <%= text_field_tag :keywords, nil, class: "form-control" %>
  </div>

  <div class="col-xs-2">
    <%= submit_tag "Buscar", class: "btn btn-warning search-submit", id: "search-btn" %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :result_type, "Tipo de resultados", class: "control-label col-xs-2" %>
  <div class="col-xs-7">
    <%= select_tag :result_type, options_for_select([["Seguidores", "followers"], ["Siguiendo", "following"]], ["Seguidores", "followers"]), class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :search_lvl, "Nivel profundidad", class: "control-label col-xs-2" %>
  <div class="col-xs-7">
    <%= number_field_tag :search_lvl, 1, class: "form-control", min: 1 %>
  </div>
</div>
