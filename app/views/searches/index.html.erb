<div id="page-wrapper">
    <div class="container-fluid margin-layout">

		<!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Búsqueda <small>Quedan <span class="label label-<%= @n_calls <= 1 ? 'danger' : 'success' %>"><%= @n_calls %> llamadas</span></small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <%= link_to "Inicio", dashboard_index_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-search"></i> Búsqueda
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
        	<div class="col-lg-6">
                <div class="panel panel-primary">
                	<div class="panel-heading">Parámetros de búsqueda</div>
                    <div class="panel-body">

				        <%= form_tag({controller: "searches", action: "create"}, 
				        				method: "post", 
				        				class: "form-horizontal", 
				        				remote: true) do %>

				        	<div class="form-group">
							    <%= label_tag :keywords, "Palabras clave", class: "control-label col-xs-2" %>
							    <div class="col-xs-10">
									<%= text_field_tag :keywords, nil, class: "form-control" %>
								</div>
							</div>

							<div class="panel panel-info">
								<div class="panel-heading">Criterios de parada</div>
								<div class="panel-body">
									<div class="form-group">
									    <%= label_tag :time_stop, "Tiempo", class: "control-label col-xs-2" %>
									    <div class="col-xs-1">
											<%= check_box_tag :check_period, 'yes', false, class: "checkbox-reduce form-control" %>
										</div>
										<div class="col-xs-3">
											<input type="text" name="stop_period" id="stop_period" value="" class="hasDatepicker form-control" placeholder="HH:mm:ss" disabled="disabled">
										</div>
									</div>
									<div class="form-group">
									    <%= label_tag :data_stop, "Datos", class: "control-label col-xs-2" %>
									    <div class="col-xs-1">
											<%= check_box_tag :check_data, 'yes', false, class: "checkbox-reduce form-control" %>
										</div>
										<div class="col-xs-3">
											<%= number_field_tag :data_stop, nil, min: 0, class: "form-control", placeholder: "Cantidad de datos", disabled: "disabled" %>
											<!-- <input type="number" min="0" name="stop_data" id="stop_data" value="" class="form-control" placeholder="Cantidad de datos" disabled="disabled"> -->
										</div>
									</div>
									
								</div>
							</div>

							<div class="form-group">
			    				<div class="col-xs-offset-2 col-xs-10">
									<%= submit_tag "Buscar", class: "btn btn-warning search-submit" %>
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>

			<div class="col-lg-6">
				<div class="panel panel-info">
					<div class="panel-heading">Log</div>
					<div class="panel-body" style="max-height: 330px;overflow-y: scroll;">
			        	<ul>
					        <div id="test-div">
					        </div>
			        	</ul>
			    	</div>    	
				</div>
	        </div>

        </div>
        <!-- /.row -->

	</div>
</div>