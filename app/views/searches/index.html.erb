<div id="page-wrapper">
    <div class="container-fluid margin-layout">

		<!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Búsquedas <small>Quedan <span class="label label-<%= @n_calls <= 1 ? 'danger' : 'success' %>"><%= @n_calls %> llamadas</span></small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <%= link_to "Inicio", dashboard_index_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-search"></i> Búsquedas
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">

	        <%= form_tag({controller: "searches", action: "search"}, 
	        				method: "post", 
	        				html: {class: "nifty_form"}, 
	        				remote: true) do %>

				<%= text_field_tag :key_words %>
				<%= submit_tag "Buscar", html: {class: "btn btn-default search-submit"} %>
			<% end %>

	        	<ul>
			        <div id="test-div">
			        </div>
	        	</ul>


        </div>
        <!-- /.row -->

	</div>
</div>