<div id="page-wrapper">
    <div class="container-fluid margin-layout">

      <!-- Page Heading -->
      <div class="row">
          <div class="col-lg-12">
              <h1 class="page-header">
                  Usuario de Twitter 
                  <%# @search.keywords.split(" ").each do |keyword| %>
                    <!-- <small><span class="badge"><%#= keyword %></span></small> -->
                  <%# end %>                    
              </h1>
              <ol class="breadcrumb">
                  <li>
                      <i class="fa fa-dashboard"></i>  <%= link_to "Inicio", dashboard_index_path %>
                  </li>
                  <li>
                      <i class="glyphicon glyphicon-th-list"></i> <%= link_to "Listar Búsquedas", searches_path %>
                  </li>
                  <li>
                      <i class="glyphicon glyphicon-search"></i>  <%= link_to "Búsqueda", search_show_users_path(@search) %>
                  </li>
                  <li class="active">
                      <i class="glyphicon glyphicon-user"></i> Usuario de Twitter
                  </li>
              </ol>
          </div>
      </div>
      <!-- /.row -->

      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-primary">
            <div class="panel-heading">Detalle del Usuario de Twitter</div>
            <div class="panel-body">
              <div class="col-lg-7">              
                <p>
                  <strong>ID:</strong>
                  <%= @tuser.twitters_user[:id_str] %>
                </p>

                <p>
                  <strong>Name:</strong>
                  <%= @tuser.twitters_user[:name] %>
                </p>

                <p>
                  <strong>Screen Name:</strong>
                  <%= @tuser.twitters_user[:screen_name] %>
                </p>

                <p>
                  <strong>Description:</strong>
                  <%= @tuser.twitters_user[:description] %>
                </p>

                <p>
                  <strong>Time Zone:</strong>
                  <%= @tuser.twitters_user[:time_zone] %>
                </p>

                <p>
                  <strong>Followers:</strong>
                  <%= @tuser.twitters_user[:followers_count] %>
                </p>

                <p>
                  <strong>Following:</strong>
                  <%= @tuser.twitters_user[:friends_count] %>
                </p>
                
                <p>
                  <strong>Statuses:</strong>
                  <%= @tuser.twitters_user[:statuses_count] %>
                </p>

                <p>
                  <strong>Created At:</strong>
                  <%= @tuser.twitters_user[:created_at] %>
                </p>


                <%= link_to 'Editar', edit_search_tweet_path(@search, @tuser), class: "btn btn-warning btn-sm" %>
              </div>  
              <div class="col-lg-5">
                <div id="show-tweet-map"></div>
              </div>
            </div> 
            <!-- /.panel-body -->
          </div>
        </div>
      </div>
      <!-- /.row -->

    </div>
</div>
