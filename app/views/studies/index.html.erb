<div id="page-wrapper">
    <div class="container-fluid margin-layout">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Estudios realizados
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> <%= link_to "Inicio", visual_tool_index_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-book"></i> Estudios
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">

            <div class="col-lg-12">
                <div class="panel panel-primary">
                  <div class="panel-heading">Total de estudios realizados</div>
                  <!-- <div class="panel-body">

                  </div> -->

                  <table class="table">
                    <thead>
                      <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Hora creación</th>
                        <th>Fecha creación</th>
                        <th colspan="2"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @studies.each do |study| %>
                        <tr>
                            <td><%=  study.name %></td>
                            <td><%=  study.description %></td>
                            <td><%=  study.created_at.strftime("%H:%M:%S") %></td>
                            <td><%=  study.created_at.strftime("%d/%m/%Y") %></td>
                            
                            <td><%= link_to 'Ver', study_path(pack), class: "btn btn-info btn-sm" %></td>
                            <td><%= link_to 'Eliminar', study, method: :delete,# data: { confirm: 'Are you sure?' }, 
                          class: "btn btn-danger btn-sm" %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                 
                </div>

            </div>
            <!-- /.col -->         
        </div>
        <!-- /.row -->
    </div>
</div>

