<div id="page-wrapper">
    <div class="container-fluid margin-layout">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Usuarios de Twitter
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> <%= link_to "Inicio", visual_tool_index_path %>
                    </li>
                    <li class="active">
                        <i class="glyphicon glyphicon-user"></i> Tweets
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-right">
                            <%= link_to "Visualizar", visual_tool_users_visualizer_path, class: "btn btn-success search-submit", id: "search-btn" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                  <div class="panel-heading">Tweets disponibles</div>

                  <table class="table">
                    <thead>
                      <tr>
                        <th>Nombre público</th>
                        <th>Nombre</th>
                        <th>Segidores</th>
                        <th>Siguiendo</th>
                        <th>Fecha creación</th>
                        <th colspan="2"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @visual_users.each do |vuser| %>
                        <tr>
                            <td><%=  %></td>
                          
                            <td>Indefinido</td>
                          
                            <td><%= link_to 'Ver', visual_tool_show_vusers_path(vuser), class: "btn btn-info btn-sm" %></td>
                          
                          <td><%= link_to 'Eliminar', vuser, method: :delete,# data: { confirm: 'Are you sure?' }, 
                          class: "btn btn-danger btn-sm" %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                 
                </div>

            </div>
            <!-- /.col --> 
                    
        </div>
        <!-- /.row -->
    </div>
</div>
