<div id="page-wrapper">
    <div class="container-fluid margin-layout">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Tweets
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> <%= link_to "Inicio", visual_tool_index_path %>
                    </li>
                    <li class="active">
                        <i class="fa fa-comments"></i> Tweets
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-right">
                            <%= link_to "Visualizar", visual_tool_tweets_viewer_path, class: "btn btn-success search-submit", id: "search-btn" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            
          <div class="col-lg-12">
            <div class="panel panel-primary">
              <div class="panel-heading">Tweets disponibles</div>

              <table class="table">
                <thead>
                  <tr>
                    <th>Autor</th>
                    <th>Text</th>
                    <th>Georeferencia (lat, lng)</th>
                    <th>Fecha creaci√≥n</th>
                    <th colspan="2"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @visual_tweets.each do |vtweet| %>
                    <tr>
                        <td><%=  %></td>
                      
                        <td>Indefinido</td>
                      
                        <td><%= link_to 'Ver', visual_tool_show_tweets_path(vtweet), class: "btn btn-info btn-sm" %></td>
                      
                      <td><%= link_to 'Eliminar', vtweet, method: :delete,# data: { confirm: 'Are you sure?' }, 
                      class: "btn btn-danger btn-sm" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
             
            </div>

          </div>
          <!-- /.col -->        
        </div>
        <!-- /.row -->
    </div>
</div>